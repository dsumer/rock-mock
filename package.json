{
  "name": "rock-mock",
  "version": "1.0.0-alpha.1",
  "description": "it's the solid rock for providing a mock.",
  "author": "Dominik Sumer <domi.sumer@gmail.com>",
  "repository": "git@github.com:dsumer/rock-mock.git",
  "private": true,
  "dependencies": {
    "cross-env": "6.0.3",
    "electron-is-dev": "1.1.0",
    "electron-log": "3.0.8",
    "koa": "2.10.0",
    "react": "16.10.2",
    "react-dom": "16.10.2",
    "update-electron-app": "1.5.0"
  },
  "homepage": ".",
  "devDependencies": {
    "@types/koa": "2.0.51",
    "@types/react": "16.9.9",
    "@types/react-dom": "16.9.2",
    "concurrently": "5.0.0",
    "electron": "6.0.12",
    "electron-builder": "21.2.0",
    "husky": ">=1",
    "lint-staged": ">=8",
    "prettier": "^1.18.2",
    "react-scripts": "3.2.0",
    "typescript": "3.6.4",
    "wait-on": "3.3.0"
  },
  "main": "public/electron.js",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn typescript-build && yarn react-build && electron-builder --publish=always",
    "typescript-build": "rm -rf public/src && tsc --p ./server/ && mv ./server/dist/electron.js ./public && mv ./server/dist/src ./public/ && cp ./server/src/mappings.json ./public/src",
    "build": "yarn typescript-build && yarn react-build && yarn electron-build",
    "prestart": "npm run typescript-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "prettier": "prettier --write **/*.{ts,tsx,js,jsx,css}"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
